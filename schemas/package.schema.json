{
  "$id": "https://github.com/mrl5/metarepo-to-json/blob/master/package.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "package",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "package name"
    },
    "description": {
      "type": "string",
      "description": "package description"
    },
    "homepages": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "project homepage"
      }
    },
    "licenses": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "package license"
      }
    },
    "versions": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "package version"
      }
    }
  },
  "required": ["name", "description", "homepages", "licenses", "versions"]
}
