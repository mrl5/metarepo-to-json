{
  "$id": "https://github.com/mrl5/metarepo-to-json/blob/master/kit.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "kit",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "kit name"
    },
    "branches": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "branch name"
          },
          "catpkgs": {
            "type": "array",
            "items": {
              "type": "object"
            },
            "sha1": {
              "type": "string",
              "description": "current revision of branch"
            }
          }
        },
        "required": ["name", "catpkgs", "sha1"]
      }
    }
  },
  "required": ["name", "branches"]
}
